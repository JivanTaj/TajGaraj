@model TajGaraj.Models.Part

<h2>Edit Part</h2>

<form asp-action="Edit" asp-controller="Parts" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Warranty"></label>
        <input class="form-control" asp-for="Warranty" />
        <span asp-validation-for="Warranty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vendor"></label>
        <input class="form-control" asp-for="Vendor" />
        <span asp-validation-for="Vendor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="condition"></label>
        <input class="form-control" asp-for="condition" />
        <span asp-validation-for="condition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="installed"></label>
        <input class="form-control" asp-for="installed" />
        <span asp-validation-for="installed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input class="form-control" asp-for="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div asp-validation-summary="All" class="text-danger"></div>
